velo.nikitabond.ru {

    # Фронтенд Vue.js на / (все пути кроме /api и /admin)
    route {
        @api path /api/*
        @admin path /admin/*

        reverse_proxy @api backend:3000
        reverse_proxy @admin velo-frontend-1:8080

        # Для остальных запросов фронтенд
        reverse_proxy velo-frontend-1:8080
    }

    # Логирование
    log {
        output file /var/log/caddy/access.log
        format console
    }

    # TLS
    tls {
        issuer acme {
            email geeksaider@gmail.com
        }
        on_demand
    }

    # Безопасные заголовки
    header {
        X-XSS-Protection "1; mode=block"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    
    # Кэширование
    header {
        @api path /api/*
        @static not path /api/*

        @api {
            header Cache-Control "no-store, no-cache, must-revalidate, proxy-revalidate"
        }
        @static {
            header Cache-Control "public, max-age=31536000, immutable"
        }
    }
}
