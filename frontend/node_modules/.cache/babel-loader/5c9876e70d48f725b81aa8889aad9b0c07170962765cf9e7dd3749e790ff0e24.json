{"ast":null,"code":"import { computed, onMounted } from 'vue';\nimport { useStore } from 'vuex';\nimport { useRouter } from 'vue-router';\nimport { useToast } from 'vue-toastification';\nexport default {\n  name: 'CheckoutView',\n  setup() {\n    const store = useStore();\n    const router = useRouter();\n    const toast = useToast();\n\n    // Computed properties\n    const isAuthenticated = computed(() => store.getters['auth/isAuthenticated']);\n    const user = computed(() => store.getters['auth/currentUser'] || {});\n    const cartItems = computed(() => store.getters['cart/cartItems']);\n    const cartTotal = computed(() => store.getters['cart/cartTotal']);\n    const cartItemsCount = computed(() => store.getters['cart/cartItemsCount']);\n    const loading = computed(() => store.getters.isLoading);\n\n    // Methods\n    const fetchCart = () => {\n      store.dispatch('cart/fetchCart');\n    };\n    const placeOrder = async () => {\n      if (!isAuthenticated.value) {\n        toast.error('Для оформления заказа необходимо войти в систему');\n        router.push('/login?redirect=/checkout');\n        return;\n      }\n      if (cartItems.value.length === 0) {\n        toast.error('Корзина пуста');\n        return;\n      }\n      const result = await store.dispatch('orders/createOrder');\n      if (result.success) {\n        // Order created successfully, router redirect handled in the action\n      }\n    };\n    const formatPrice = price => {\n      return new Intl.NumberFormat('ru-RU').format(price);\n    };\n\n    // Lifecycle hooks\n    onMounted(() => {\n      if (!isAuthenticated.value) {\n        toast.info('Для оформления заказа необходимо войти в систему');\n        router.push('/login?redirect=/checkout');\n        return;\n      }\n      fetchCart();\n    });\n    return {\n      isAuthenticated,\n      user,\n      cartItems,\n      cartTotal,\n      cartItemsCount,\n      loading,\n      placeOrder,\n      formatPrice\n    };\n  }\n};","map":{"version":3,"names":["computed","onMounted","useStore","useRouter","useToast","name","setup","store","router","toast","isAuthenticated","getters","user","cartItems","cartTotal","cartItemsCount","loading","isLoading","fetchCart","dispatch","placeOrder","value","error","push","length","result","success","formatPrice","price","Intl","NumberFormat","format","info"],"sources":["/app/src/views/CheckoutView.vue"],"sourcesContent":["<template>\n  <div class=\"max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24\">\n    <h1 class=\"text-3xl font-light text-gray-900 mb-16 text-center\">Оформление заказа</h1>\n    \n    <div v-if=\"loading\" class=\"flex justify-center items-center py-32\">\n      <div class=\"animate-spin h-12 w-12 border-3 border-indigo-500 border-t-transparent rounded-full\"></div>\n    </div>\n    \n    <div v-else-if=\"!isAuthenticated\" class=\"text-center py-24 bg-white rounded-2xl shadow-sm max-w-lg mx-auto\">\n      <svg xmlns=\"http://www.w3.org/2000/svg\" class=\"h-16 w-16 mx-auto text-gray-300 mb-6\" fill=\"none\" viewBox=\"0 0 24 24\" stroke=\"currentColor\">\n        <path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"1\" d=\"M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z\" />\n      </svg>\n      <h2 class=\"text-2xl font-light text-gray-900 mb-4\">Требуется авторизация</h2>\n      <p class=\"text-gray-500 mb-8\">Для оформления заказа необходимо войти в систему</p>\n      <router-link to=\"/login?redirect=/checkout\" class=\"py-3 px-6 bg-indigo-600 hover:bg-indigo-700 text-white rounded-xl transition duration-150 text-sm font-medium inline-block\">\n        Войти в аккаунт\n      </router-link>\n    </div>\n    \n    <div v-else-if=\"cartItems.length === 0\" class=\"text-center py-24 bg-white rounded-2xl shadow-sm max-w-lg mx-auto\">\n      <svg xmlns=\"http://www.w3.org/2000/svg\" class=\"h-16 w-16 mx-auto text-gray-300 mb-6\" fill=\"none\" viewBox=\"0 0 24 24\" stroke=\"currentColor\">\n        <path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"1\" d=\"M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z\" />\n      </svg>\n      <h2 class=\"text-2xl font-light text-gray-900 mb-4\">Ваша корзина пуста</h2>\n      <p class=\"text-gray-500 mb-8\">Добавьте товары в корзину, чтобы оформить заказ</p>\n      <router-link to=\"/shop\" class=\"py-3 px-6 bg-indigo-600 hover:bg-indigo-700 text-white rounded-xl transition duration-150 text-sm font-medium inline-block\">\n        Перейти в каталог\n      </router-link>\n    </div>\n    \n    <div v-else class=\"grid grid-cols-1 lg:grid-cols-3 gap-8\">\n      <div class=\"lg:col-span-2\">\n        <div class=\"bg-white rounded-2xl shadow-sm p-8 mb-8\">\n          <h2 class=\"text-xl font-medium text-gray-900 mb-6\">Информация о заказе</h2>\n          \n          <div class=\"mb-4\">\n            <p class=\"text-gray-500 mb-1\">Вы оформляете заказ как:</p>\n            <p class=\"font-medium text-gray-900\">{{ user.email }}</p>\n          </div>\n        </div>\n        \n        <div class=\"bg-white rounded-2xl shadow-sm overflow-hidden mb-8\">\n          <div class=\"p-8 border-b border-gray-200\">\n            <h2 class=\"text-xl font-medium text-gray-900\">Содержимое заказа</h2>\n          </div>\n          \n          <div class=\"divide-y divide-gray-200\">\n            <div \n              v-for=\"item in cartItems\" \n              :key=\"item.productId\" \n              class=\"p-6 flex justify-between items-center\"\n            >\n              <div class=\"flex items-center\">\n                <div class=\"w-20 h-20 rounded-xl overflow-hidden flex-shrink-0 mr-6 bg-gray-100\">\n                  <img \n                    :src=\"item.image_url || 'https://via.placeholder.com/100x100?text=Нет+изображения'\" \n                    :alt=\"item.title\" \n                    class=\"w-full h-full object-cover\"\n                  >\n                </div>\n                <div>\n                  <h3 class=\"font-medium text-gray-900 mb-1\">{{ item.title }}</h3>\n                  <p class=\"text-sm text-gray-500\">Количество: {{ item.quantity }}</p>\n                </div>\n              </div>\n              <div class=\"font-medium text-gray-900\">\n                {{ formatPrice(item.price * item.quantity) }} ₽\n              </div>\n            </div>\n          </div>\n        </div>\n        \n        <div class=\"flex justify-between items-center\">\n          <router-link to=\"/cart\" class=\"flex items-center text-gray-500 hover:text-indigo-600 transition duration-150\">\n            <svg xmlns=\"http://www.w3.org/2000/svg\" class=\"h-5 w-5 mr-2\" fill=\"none\" viewBox=\"0 0 24 24\" stroke=\"currentColor\">\n              <path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"1.5\" d=\"M10 19l-7-7m0 0l7-7m-7 7h18\" />\n            </svg>\n            Вернуться в корзину\n          </router-link>\n        </div>\n      </div>\n      \n      <div class=\"lg:col-span-1\">\n        <div class=\"bg-white rounded-2xl shadow-sm p-8 sticky top-4\">\n          <h2 class=\"text-xl font-medium text-gray-900 mb-8\">Итого по заказу</h2>\n          \n          <div class=\"space-y-4 mb-8\">\n            <div class=\"flex justify-between\">\n              <span class=\"text-gray-500\">Сумма</span>\n              <span class=\"font-medium\">{{ formatPrice(cartTotal) }} ₽</span>\n            </div>\n            <div class=\"flex justify-between\">\n              <span class=\"text-gray-500\">Товаров</span>\n              <span class=\"font-medium\">{{ cartItemsCount }}</span>\n            </div>\n            <div class=\"flex justify-between\">\n              <span class=\"text-gray-500\">Доставка</span>\n              <span class=\"font-medium\">Бесплатно</span>\n            </div>\n            <div class=\"border-t border-gray-200 pt-4 flex justify-between mt-6\">\n              <span class=\"font-medium text-gray-900\">Итого к оплате</span>\n              <span class=\"font-bold text-lg text-indigo-600\">{{ formatPrice(cartTotal) }} ₽</span>\n            </div>\n          </div>\n          \n          <button \n            class=\"py-3 px-6 bg-indigo-600 hover:bg-indigo-700 text-white rounded-xl transition duration-150 w-full flex items-center justify-center text-sm font-medium\"\n            @click=\"placeOrder\"\n            :disabled=\"loading\"\n          >\n            <span v-if=\"loading\" class=\"flex items-center\">\n              <svg class=\"animate-spin -ml-1 mr-2 h-5 w-5 text-white\" xmlns=\"http://www.w3.org/2000/svg\" fill=\"none\" viewBox=\"0 0 24 24\">\n                <circle class=\"opacity-25\" cx=\"12\" cy=\"12\" r=\"10\" stroke=\"currentColor\" stroke-width=\"4\"></circle>\n                <path class=\"opacity-75\" fill=\"currentColor\" d=\"M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z\"></path>\n              </svg>\n              Оформление...\n            </span>\n            <span v-else class=\"flex items-center\">\n              <svg xmlns=\"http://www.w3.org/2000/svg\" class=\"h-5 w-5 mr-2\" fill=\"none\" viewBox=\"0 0 24 24\" stroke=\"currentColor\">\n                <path stroke-linecap=\"round\" stroke-linejoin=\"round\" stroke-width=\"1.5\" d=\"M5 13l4 4L19 7\" />\n              </svg>\n              Оформить заказ\n            </span>\n          </button>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { computed, onMounted } from 'vue';\nimport { useStore } from 'vuex';\nimport { useRouter } from 'vue-router';\nimport { useToast } from 'vue-toastification';\n\nexport default {\n  name: 'CheckoutView',\n  setup() {\n    const store = useStore();\n    const router = useRouter();\n    const toast = useToast();\n    \n    // Computed properties\n    const isAuthenticated = computed(() => store.getters['auth/isAuthenticated']);\n    const user = computed(() => store.getters['auth/currentUser'] || {});\n    const cartItems = computed(() => store.getters['cart/cartItems']);\n    const cartTotal = computed(() => store.getters['cart/cartTotal']);\n    const cartItemsCount = computed(() => store.getters['cart/cartItemsCount']);\n    const loading = computed(() => store.getters.isLoading);\n    \n    // Methods\n    const fetchCart = () => {\n      store.dispatch('cart/fetchCart');\n    };\n    \n    const placeOrder = async () => {\n      if (!isAuthenticated.value) {\n        toast.error('Для оформления заказа необходимо войти в систему');\n        router.push('/login?redirect=/checkout');\n        return;\n      }\n      \n      if (cartItems.value.length === 0) {\n        toast.error('Корзина пуста');\n        return;\n      }\n      \n      const result = await store.dispatch('orders/createOrder');\n      \n      if (result.success) {\n        // Order created successfully, router redirect handled in the action\n      }\n    };\n    \n    const formatPrice = (price) => {\n      return new Intl.NumberFormat('ru-RU').format(price);\n    };\n    \n    // Lifecycle hooks\n    onMounted(() => {\n      if (!isAuthenticated.value) {\n        toast.info('Для оформления заказа необходимо войти в систему');\n        router.push('/login?redirect=/checkout');\n        return;\n      }\n      \n      fetchCart();\n    });\n    \n    return {\n      isAuthenticated,\n      user,\n      cartItems,\n      cartTotal,\n      cartItemsCount,\n      loading,\n      placeOrder,\n      formatPrice\n    };\n  }\n};\n</script>\n"],"mappings":"AAmIA,SAASA,QAAQ,EAAEC,SAAQ,QAAS,KAAK;AACzC,SAASC,QAAO,QAAS,MAAM;AAC/B,SAASC,SAAQ,QAAS,YAAY;AACtC,SAASC,QAAO,QAAS,oBAAoB;AAE7C,eAAe;EACbC,IAAI,EAAE,cAAc;EACpBC,KAAKA,CAAA,EAAG;IACN,MAAMC,KAAI,GAAIL,QAAQ,CAAC,CAAC;IACxB,MAAMM,MAAK,GAAIL,SAAS,CAAC,CAAC;IAC1B,MAAMM,KAAI,GAAIL,QAAQ,CAAC,CAAC;;IAExB;IACA,MAAMM